{
  "name": "@enbock/state-value-observer",
  "description": "An atomic value observer pattern implementation.",
  "version": "1.0.1-dev.1",
  "homepage": "https://github.com/enbock/State-Value-Observer/",
  "license": "MIT",
  "author": "Endre Bock <npm.dev@itbock.de>",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "npx tsc --build tsconfig.json -v",
    "test": "jest --coverage --verbose",
    "deploy": "yarn publish --non-interactive"
  },
  "devDependencies": {
    "@babel/core": "^7.10.3",
    "@babel/preset-typescript": "^7.10.1",
    "@babel/runtime": "^7.10.3",
    "@types/jest": "^26.0.3",
    "jest": "^26.1.0",
    "ts-jest": "^26.1.1",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.5"
  },
  "jest": {
    "roots": [
      "./src"
    ],
    "collectCoverageFrom": [
      "**/*.ts"
    ],
    "transform": {
      ".ts": "ts-jest"
    },
    "testEnvironment": "node",
    "testRegex": "\\.test\\.ts$",
    "testURL": "http://localhost",
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100
      }
    }
  }
}
