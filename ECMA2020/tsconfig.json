{
  "compilerOptions": {
    "outDir": "../dist/ECMA2020",
    "declaration": false,
    "module": "ES2020",
    "target": "ES2020",
    "strict": true,
    "listEmittedFiles": true,
    "allowSyntheticDefaultImports": true,
    "rootDir": "../src",
    "moduleResolution": "Node"
  },
  "include": [
    "../src/**/*"
  ],
  "exclude": [
    "../node_modules",
    "../**/*.test.*"
  ]
}
